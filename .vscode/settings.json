    // Lists & focus
    "list.hoverBackground": "#161B22",
    "list.activeSelectionBackground": "#1E3B40",
    "focusBorder": "#55BCC7",

    // Notifications
    "notification.background": "#0F1419",
    "notification.foreground": "#E6EDF3",
    "notification.border": "#1F2428",

    // Inputs
    "input.background": "#0B1015",
    "input.border": "#1E3B40",
    "inputOption.activeBorder": "#55BCC7"
